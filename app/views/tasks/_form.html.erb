
<%= form_for @task, class: "form-inline" do |r| %>
  <%= r.label :title, 'enter a title' %>
  <%= r.text_field :title %>
  <%= r.label :details, 'enter specifications' %>
  <%= r.text_field :details %>
  <%= r.label :completed, 'Completion' %>
  <%= r.text_field :completed %>
  <%= r.submit "submit", class: "btn btn-primary" %>

<% end %>
