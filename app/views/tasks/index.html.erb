index.html.erb

<h1> List of all my tasks </h1>

<ul> <% @tasks.each do |task| %>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :tasks, @tasks %>

  <% if task.completed == true %>
    <li> <i class="far fa-check-square"></i> <%= link_to task.title, task_path(task) %> </li>
  <% else %>
    <li> <i class="far fa-square"></i> <%= link_to task.title, task_path(task) %> </li>
  <% end %>

<% end %>
</ul>

<%= link_to"Create a new task", new_path %>
